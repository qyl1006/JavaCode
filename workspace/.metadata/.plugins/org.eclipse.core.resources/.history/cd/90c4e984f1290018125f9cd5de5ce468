<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  	
  	<mapper namespace="product">
  	
  		<insert id="save">
  			insert into t_product (name, price, info) values (#{name}, #{price}, #{info})
  		</insert>
  		<update id="update">
  			update t_product set name = #{name}, price = #{price}, info = #{info} where id = #{id}
  		</update>
  	
  		<delete id="delete">
  			delete from t_product where id = #{id}
  		</delete>
  		
  		<select id="get" resultType="product">
  			select * from t_product where id = #{id}
  		</select>
  		
  		<select id="queryCount" resultType="Long">
  			select count(id) from t_product
  				<where>
  					<if test="keyWord != null">
  						and name like concat('%', #{keyWord}, '%') or price like concat('%', #{keyWord}, '%')
  					</if>
  					<if test="minPrice > 0">
  						and price &gt;= #{minPrice}
  					</if>
  					<if test="maxPrice > 0">
  						and price &lt;= #{maxPrice}
  					</if>
  				</where>
  		</select>
  		<select id="query" resultType="product">
  			select * from t_product
  				<where>
  					<if test="keyWord != null">
  						and name like concat('%', #{keyWord}, '%') or price like concat('%', #{keyWord}, '%')
  					</if>
  					<if test="minPrice > 0">
  						and price &gt;= #{minPrice}
  					</if>
  					<if test="maxPrice > 0">
  						and price &lt;= #{maxPrice}
  					</if>
  				</where>
  		</select>
  	</mapper>